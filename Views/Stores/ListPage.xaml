<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShoppingCenterApp.Views.Stores.ListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviours="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:ShoppingCenterApp.ViewModels.Stores"
    Title="ListPage">
    <ContentPage.BindingContext>
        <vm:ListPageViewModel x:Name="vm" />
    </ContentPage.BindingContext>
    <Grid Padding="20" RowDefinitions="50, *">
        <Entry Placeholder="Store search..." Text="{Binding TextSearch}">
            <Entry.Behaviors>
                <behaviours:EventToCommandBehavior Command="{Binding StoreSearchTextChangedCommand}" EventName="TextChanged" />
            </Entry.Behaviors>
        </Entry>
        <CollectionView Grid.Row="1" ItemsSource="{Binding EstablishmentFilteredList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference vm}, Path=EstablishmentTappedCommand}" CommandParameter="{Binding .}" />
                        </Label.GestureRecognizers>
                    </Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>