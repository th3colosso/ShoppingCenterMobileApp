<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="ShoppingCenterApp.Resources.Styles.ExplicitStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="SecondaryText" TargetType="Label">
        <Setter Property="TextColor" Value="#A0A0A0" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="OpenSansLight" />
    </Style>
    <Style x:Key="PrimaryText" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark='#FFFFFF', Light='#000000'}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextTransform" Value="Uppercase" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
    </Style>
    <Style x:Key="HeadingText" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark='#FFFFFF', Light='#000000'}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
    </Style>
    <Style x:Key="DetailText" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Dark='#FFFFFF', Light='#000000'}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegulaar" />
    </Style>

</ResourceDictionary>